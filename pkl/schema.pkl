@go.Package { name = "github.com/alexnguyennn/aerospace-move/pkg/schema"}
module com.alexnguyennn.aerospaceMove

// provides @go.Package annotation
import "package://pkg.pkl-lang.org/pkl-go/pkl.golang@0.8.0#/go.pkl"
// TODO: check if description pulls through on remote
/// windowRule description
class windowRule {
  /// name of the window title to match
  title: String
  /// regex to potentially match multiple window titles
  titleRegex: String
  appRegex: String
  app: String
}

class  workspaceConfig {
index: UInt8
name: String
rules: Listing<windowRule>
}

/// optional rules where, if provided will allow all matched windows to be restarted before moving
restartConfig: Listing<windowRule>
moveConfig: Listing<workspaceConfig>
